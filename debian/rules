#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1


Makefile: Gateway.mwc
	touch Makefile #we don't actually use Makefile, so let's just touch it instead of generating it with MWC
	cat install.mk >> GNUmakefile

#.PHONY: build
#build: Makefile
override_dh_auto_build: Makefile
	ant build

override_db_auto_install: Makefile
	dh_auto_install
	rm $(DESTDIR)/etc/init.d/ammo-gateway

#.PHONY: clean
#clean: Makefile
override_dh_auto_clean: Makefile
	dh_auto_clean
	rm -f Makefile
	
override_dh_strip:
	echo "Leaving debug symbols in package binaries"

%:
	dh  $@
